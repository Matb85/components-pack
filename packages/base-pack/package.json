{
  "version": "4.0.0",
  "name": "@matb85/base-pack",
  "author": "Mateusz Bis <mateuszbis85@gmail.com> (https://matb85.github.io/)",
  "license": "ISC",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf ./dist && pnpm run build:ts && pnpm run build:sass && pnpm run build:css",
    "build:ts": "node ./esbuild.config.js && tsc --emitDeclarationOnly --declaration --project tsconfig.json",
    "build:sass": "sass css/index.scss:dist/index.css css/navbar.scss:dist/navbar.css --load-path=node_modules/modular-slider/dist/ --no-source-map",
    "build:css": "postcss dist/index.css -o dist/index.css && postcss dist/navbar.css -o dist/navbar.css",
    "lint": "eslint ./src/**/*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.0",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "postcss-env-function": "^7.0.0",
    "sass": "^1.84.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "modular-slider": "^1.0.3"
  },
  "files": [
    "dist/*"
  ]
}
