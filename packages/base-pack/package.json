{
  "version": "2.1.0",
  "name": "@matb85/base-pack",
  "author": "matb85",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && pnpm run build:ts && pnpm run build:sass && pnpm run build:css",
    "build:ts": "node ./esbuild.config.js && tsc --emitDeclarationOnly --declaration --project tsconfig.json",
    "build:sass": "sass css/index.scss:dist/index.css css/navbar.scss:dist/navbar.css --load-path=node_modules/modular-slider/dist/ --no-source-map",
    "build:css": "postcss dist/index.css -o dist/index.css && postcss dist/navbar.css -o dist/navbar.css",
    "lint": "eslint ./src/**/*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "modular-slider": "^0.11.2",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "postcss-env-function": "^6.0.0",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist/*"
  ]
}
